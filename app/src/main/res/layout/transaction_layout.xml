<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="4dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#EFF0F4"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/rajdhani"
                    android:id="@+id/transaction_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deposit"
                    android:textColor="#FF5656"
                    android:layout_marginStart="4dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:fontFamily="@font/rajdhani"
                    android:id="@+id/transaction_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jawwal paying bill"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:ems="10"
                    android:textColor="#5BCFA2"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
                <TextView
                    android:fontFamily="@font/rajdhani"
                    android:id="@+id/transaction_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$120"
                    android:layout_gravity="center"
                    android:layout_marginStart="12dp"
                    android:textStyle="bold"
                    android:textColor="#000"/>
            </LinearLayout>
            <TextView
                android:fontFamily="@font/rajdhani"
                android:id="@+id/transaction_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon, 28-Oct-19 ,9:08 PM"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
